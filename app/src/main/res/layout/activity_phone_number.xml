<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".Activity.phoneNumber_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="شماره موبایل"
            android:fontFamily="@font/bmitra"
            android:textColor="@color/colorTextPrimary"
            android:textSize="40sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:fontFamily="@font/bmitra"
            android:text="برای ورود به «تقویم آشپزی»\n شماره موبایلت رو وارد کن"
            android:textColor="@color/colorTextSecondary"
            android:textSize="25sp"/>

        <EditText
            android:id="@+id/inputMobile"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/background_edittext"
            android:hint="مثلا: *********09"
            android:imeOptions="actionDone"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="22sp"
            android:fontFamily="@font/bmitra"
            android:maxLength="11"/>

        <TextView
            android:id="@+id/Error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="شماره وارد شده صحیح نیست!"
            android:fontFamily="@font/bmitra"
            android:textColor="@color/red"
            android:textSize="20sp"
            android:gravity="center"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/buttonGetOTP"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:background="@drawable/background_button"
            android:text="ثبت"
            android:fontFamily="@font/bmitra"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:foreground="@color/foreGround"
            android:foregroundTintMode="src_over" />

    </LinearLayout>

</ScrollView>